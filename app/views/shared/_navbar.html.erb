<div class="navbar">
  <%# NAVBAR %>
  <div class="navbar-floaties">
    <%# Logo %>
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "logo_floaty.png" %>
    <% end %>

    <div class="navbar-search_form">
      <%= render "shared/search_form" %>
    </div>

    <div class="nav-links">
      <div class="rent-me-link">
        <%= link_to "Rent my floaty", new_floaty_path, class: "nav-link" %>
      </div>

      <div class="dropdown-icon">
        <div>
          <i class="fas fa-bars dropbtn"></i>
        </div>
      </div>
    </div>

  </div>

  <div class="dropdown">
    <%# <div class="dropdown-icon dropdown-toggle" data-toggle="dropdown"> %>
      <i class="fas fa-bars dropbtn dropdown-toggle" data-toggle="dropdown"></i>
    <%# </div> %>
    <ul class="dropdown_menu">
      <% if user_signed_in? %>
        <li>
          <%= link_to "My floaties", "#" %>
        </li>
        <li>
          <%= link_to "My reservations", "#" %>
        </li>
        <li>
          <%= link_to "Log out", "#", data: {turbo_method: :delete} %>
        </li>
      <% else %>
        <li>
          <%= link_to "Login", new_user_session_path %>
        </li>
      <% end %>
    </ul>
  </div>
</div>


