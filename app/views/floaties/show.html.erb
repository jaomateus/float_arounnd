<div class="container col-sm-5 offset-sm-2 col-md-6 offset-md-0 col-lg-8">

  <div class="d-flex justify-content-between align-items-center my-4 mt-5">
    <div>
      <h3><%= @floaty.title %></h3>
      <p><%= @floaty.category %></p>
    </div>
    <span class="mb-2 d-block"><small><em class="text-muted"><%= "This floaty doesnt't have any bookings yet!" if @floaty.bookings.empty? %></em></small></span>
    <div>
      <button type="button" class="btn btn-flat" data-bs-toggle="modal" data-bs-target="#new_floaty_booking_path(@floaty)">
        Book
      </button>
    </div>
  </div>

  <div class="card-floaty-show ">
      <%= image_tag "rubber_duck.jpg" %>
  </div>

  <div class="card-floaty-show-text">
    <div>
      <h3><%= @floaty.title %></h3>
    </div>
    <div>
      <p>Category:<%= @floaty.category %></p>
    </div>
    <p>Details:<%= @floaty.details %></p>
    <p>$<%= @floaty.price %></p>
    <p>City:<%= @floaty.city %></p>
    <p>Address:<%= @floaty.address %></p>
  </div>
</div>
